{% highlight "css" %}
:root {
    --ratio: 1.4;
    --color-light: #f9f9f9;
    --color-dark: #212121;
    --color-shadow: rgba(33, 33, 33, 0.2);
    --color-secondary:#4a0080;
    --size--1: calc(var(--size-1) * calc(2 - var(--ratio)));
    --size-1: 1rem;
    --size-2: calc(var(--size-1) * var(--ratio));
    --size-3: calc(var(--size-2) * var(--ratio));

    --size-8: calc(10 * var(--ratio));
}

.navbar {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding: var(--size-1);
    background-color: var(--color-light);
    font-size: var(--size-2);
}

.nav {
    list-style: none;
    display: flex;
    flex-direction: row;
}

.nav > li {
    padding-right: var(--size-1);
}

.nav > li > a, .dropdown > button {
    text-decoration: none;
    color: var(--color-secondary);
}

.nav > li > a:hover, .dropdown > button:hover {
    color: var(--color-dark);
}

.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown > .nav {
    display: none;
    position: absolute;
    background-color: var(--color-light);
    min-width: var(--size-8);
    box-shadow: 0px 8px 16px 0px var(--color-shadow);
    background-color: var(--color-light);
    padding: 0;
    z-index: 1010;
}

.dropdown > .nav > li {
    padding: var(--size--1);
}

.dropdown > .nav > li > a {
    display: inline-block;
}

.dropdown > .nav > li:hover {
    box-shadow: 0px 8px 16px 0px var(--color-shadow);
}

.dropdown:hover .nav {
    display: flex;
    flex-direction: column;
}

.dropdown > button {
    padding: 0;
    border: 0;
    background-color: inherit;
    font-size: var(--size-2);
}

@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        align-items: flex-start;
    }
    .nav {
        flex-direction: column;
        padding-left: 0;
    }
}
